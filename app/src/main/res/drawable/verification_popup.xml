            android:pivotX="-40%"
            android:pivotY="87%"
            android:toDegrees="45">

            <shape android:shape="rectangle">

                <solid android:color="@android:color/white" />

                <stroke
                    android:width="1dp"
                    android:color="@color/dark_blue_button" />


            </shape>

        </rotate>
