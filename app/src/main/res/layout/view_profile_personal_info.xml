<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/prifleImageView"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:padding="2dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.privetalk.app.utilities.PriveTalkTextView
                android:id="@+id/profileLocationStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:textSize="18sp"
                app:ttf_name="@string/roboto_bold" />

            <View
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignRight="@+id/profileLocationStatic"
                android:layout_below="@+id/profileLocationStatic"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/black" />
        </RelativeLayout>


        <com.privetalk.app.utilities.PriveTalkTextView
            android:id="@+id/profileLocationPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:ttf_name="@string/roboto_regular" />
    </LinearLayout>


</RelativeLayout>
