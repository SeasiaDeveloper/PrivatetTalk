<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/priveIsDifferent"
        android:layout_marginTop="20dp"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.privetalk.app.utilities.PriveTalkTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privetalk_is"
            android:textColor="@color/welcome_text"
            android:textSize="26sp"
            app:ttf_name="@string/roboto_regular" />

        <com.privetalk.app.utilities.PriveTalkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/different"
            android:textColor="@color/welcome_text"
            android:textSize="35sp"
            app:ttf_name="@string/roboto_bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="66"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/verifiedSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:src="@drawable/verify_icon" />


                <com.privetalk.app.utilities.PriveTalkTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/verified_profiles"
                    android:textColor="@color/welcome_text"
                    android:textSize="16sp"
                    app:ttf_name="@string/roboto_light" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rewards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:src="@drawable/angel_icon" />


                <com.privetalk.app.utilities.PriveTalkTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/friendliness_promoted"
                    android:textColor="@color/welcome_text"
                    android:textSize="16sp"
                    app:ttf_name="@string/roboto_bold" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:src="@drawable/clock_icon" />


                <com.privetalk.app.utilities.PriveTalkTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/secure_messaging"
                    android:textColor="@color/welcome_text"
                    android:textSize="16sp"
                    app:ttf_name="@string/roboto_light" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/noPhoto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:src="@drawable/nophoto_icon" />


                <com.privetalk.app.utilities.PriveTalkTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_screenshots"
                    android:textColor="@color/welcome_text"
                    android:textSize="16sp"
                    app:ttf_name="@string/roboto_light" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>