<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bodyType"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/blue_rectangle_border_white_backgound"
    android:paddingLeft="10dp"
    android:paddingRight="15dp">


    <com.privetalk.app.utilities.PriveTalkTextView
        android:id="@+id/filterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/welcome_text"
        android:textSize="18sp"
        app:ttf_name="@string/roboto_light" />


    <ImageView
        android:id="@+id/clearFilter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ex_button" />

</RelativeLayout>