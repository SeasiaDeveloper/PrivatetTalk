<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:gravity="center">


    <RelativeLayout
        android:id="@+id/myDialog"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="24dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_rectangle_border" />

        <ImageView
            android:id="@+id/priveTalkLogo"
            android:layout_width="144dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/privetal_logo" />

        <com.privetalk.app.utilities.PriveTalkTextView
            android:id="@+id/about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/priveTalkLogo"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/priveTalkLogo"
            android:text="@string/version_placeholder"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:ttf_name="@string/roboto_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priveTalkLogo"
            android:gravity="center|top"
            android:orientation="vertical">

            <com.privetalk.app.utilities.PriveTalkTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/privetalk_property"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:ttf_name="@string/roboto_light" />

            <com.privetalk.app.utilities.PriveTalkTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="@string/developed_by"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:ttf_name="@string/roboto_light" />

            <com.privetalk.app.utilities.PriveTalkTextView
                android:id="@+id/aboutContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corners_blue_border_button"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="@string/contact_us"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:ttf_name="@string/roboto_light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <com.privetalk.app.utilities.PriveTalkTextView
                    android:id="@+id/privacyAndPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/privacy_policy"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    app:ttf_name="@string/roboto_light" />

                <com.privetalk.app.utilities.PriveTalkTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    app:ttf_name="@string/roboto_light" />

                <com.privetalk.app.utilities.PriveTalkTextView
                    android:id="@+id/termsAndConditions"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/about_terms"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:ttf_name="@string/roboto_light" />

                <com.privetalk.app.utilities.PriveTalkTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:ttf_name="@string/roboto_light" />

                <com.privetalk.app.utilities.PriveTalkTextView
                    android:id="@+id/datingSafetyGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"

                    android:text="@string/dating_safety_guide"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:ttf_name="@string/roboto_light" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/closeDialog"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignRight="@+id/myDialog"
        android:layout_marginRight="-12dp"
        android:layout_marginTop="-12dp"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/close_dialog_icon" />

</RelativeLayout>