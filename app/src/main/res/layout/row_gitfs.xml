<?xml version="1.0" encoding="utf-8"?>
<com.privetalk.app.utilities.SquarePercentageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/oval_blue_border"
        app:layout_marginPercent="4%" />

    <ImageView
        android:id="@+id/giftIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:layout_heightPercent="50%"
        app:layout_marginTopPercent="14%"
        app:layout_widthPercent="50%" />

    <View
        android:id="@+id/blackLine"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/giftIcon"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        android:background="@android:color/black"
        app:layout_marginTopPercent="2%"
        app:layout_widthPercent="75%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/blackLine"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_marginBottomPercent="2%">

        <com.privetalk.app.utilities.PriveTalkTextView
            android:id="@+id/giftCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:ttf_name="@string/roboto_light" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/pt_coins" />


    </LinearLayout>

</com.privetalk.app.utilities.SquarePercentageLayout>