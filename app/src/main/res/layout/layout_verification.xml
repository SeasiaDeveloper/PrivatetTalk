<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_verification_width"
    android:layout_height="@dimen/popup_verification_height">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_bubble"
        android:orientation="vertical"
        android:padding="30dp">

        <com.privetalk.app.utilities.PriveTalkTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-4dp"
            android:text="@string/verifications"
            android:textColor="@android:color/black"
            android:textSize="27sp"
            app:ttf_name="@string/roboto_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <com.privetalk.app.utilities.PriveTalkTextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"

                android:text="@string/profile_picture"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:ttf_name="@string/roboto_regular" />

            <com.privetalk.app.utilities.VerificationTickView
                android:id="@+id/verificationProfilePictureTick"
                android:layout_width="16.25dp"
                android:layout_height="12.5dp"
                android:layout_gravity="center"
                android:src="@drawable/tick_icon" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.privetalk.app.utilities.PriveTalkTextView
                android:id="@+id/verififyProfilePictureButton"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/rounded_border_disable_color"
                android:gravity="center"
                android:text="@string/verify_only"
                android:textColor="@drawable/textcolor_with_disable"
                android:textSize="10sp"
                app:ttf_name="@string/roboto_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <com.privetalk.app.utilities.PriveTalkTextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center|left"
                android:clickable="true"
                android:text="@string/social_media"
                android:textColor="@android:color/black"

                android:textSize="16sp"
                app:ttf_name="@string/roboto_regular" />

            <com.privetalk.app.utilities.VerificationTickView
                android:id="@+id/verificationSocialMediaTick"
                android:layout_width="16.25dp"
                android:layout_height="12.5dp"
                android:layout_gravity="center"
                android:src="@drawable/tick_icon" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.privetalk.app.utilities.PriveTalkTextView
                android:id="@+id/verificationSocialButton"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/rounded_border_disable_color"
                android:gravity="center"
                android:text="@string/verify_only"
                android:textColor="@drawable/textcolor_with_disable"
                android:textSize="10sp"
                app:ttf_name="@string/roboto_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <com.privetalk.app.utilities.PriveTalkTextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="@string/royal_user"
                android:textColor="@android:color/black"
                android:textSize="16sp"

                app:ttf_name="@string/roboto_regular" />

            <com.privetalk.app.utilities.VerificationTickView
                android:id="@+id/verificationRoyalUserTick"
                android:layout_width="16.25dp"
                android:layout_height="12.5dp"
                android:layout_gravity="center"
                android:src="@drawable/tick_icon" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.privetalk.app.utilities.PriveTalkTextView
                android:id="@+id/verificationRoyalUserButton"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/rounded_border_disable_color"
                android:gravity="center"
                android:text="@string/verify_only"
                android:textColor="@drawable/textcolor_with_disable"
                android:textSize="10sp"
                app:ttf_name="@string/roboto_regular" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/verification_x_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="-3dp"
        android:padding="6dp"
        android:src="@drawable/circled_x" />
</RelativeLayout>