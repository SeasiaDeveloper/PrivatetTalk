<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fullScreenFrontPhotoViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.privetalk.app.utilities.PriveTalkTextView
        android:id="@+id/topTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:alpha="0.75"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="@string/step_four_text"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:ttf_name="@string/roboto_bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/leftPicture"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_margin="3dp"
            app:civ_border_color="@color/blue_border_color"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/frontPicture"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_margin="3dp"
            app:civ_border_color="@color/blue_border_color"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rightPicture"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_margin="3dp"
            app:civ_border_color="@color/blue_border_color"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_white_transparent"
        android:padding="8dp">

        <com.privetalk.app.utilities.PriveTalkTextView
            android:id="@+id/tryAgainButton"
            android:layout_width="113dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rounded_red"
            android:gravity="center"
            android:text="@string/tryAgain"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            app:ttf_name="@string/roboto_bold" />

        <com.privetalk.app.utilities.PriveTalkTextView
            android:id="@+id/submitButton"
            android:layout_width="113dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_button_green"
            android:gravity="center"
            android:text="@string/submit"
            android:textSize="21sp"

            app:ttf_name="@string/roboto_bold" />
    </RelativeLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>