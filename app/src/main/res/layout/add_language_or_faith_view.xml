<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <com.privetalk.app.utilities.PriveTalkTextView
            android:id="@+id/newRowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/welcome_text"
            android:textSize="18sp"
            app:ttf_name="@string/roboto_bold" />

        <RelativeLayout
            android:id="@+id/options"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/removeView"
            android:background="@drawable/blue_rectangle_border_white_backgound"
            android:paddingRight="15dp">

            <com.privetalk.app.utilities.PriveTalkTextView
                android:id="@+id/newRowLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:textColor="@color/welcome_text"
                android:textSize="18sp"
                app:ttf_name="@string/roboto_light" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/gradient_arrow"
                android:tint="@color/tick_grey" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/removeView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/remove_hot_match" />
    </RelativeLayout>

</LinearLayout>